@model DrNajeeb.Web.API.Models.CheckoutViewModel
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Dr. Najeeb - User Panel</title>

    <!-- CSS Files -->

    <link href="~/Content/sitecontent/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/sitecontent/css/libs/font-awesome.css" />


    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="~/Content/sitecontent/css/compiled/theme_styles.css" />

    <!-- Favicon -->
    <link type="image/x-icon" href="favicon.ico" rel="shortcut icon" />
    <!-- google font libraries -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css'>
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <!-- End CSS Files-->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="theme-blue-gradient fixed-header fixed-leftmenu">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div id="login-box">
                    <div class="row">
                        <div class="col-xs-12">
                            <header id="login-header">
                                <div id="login-logo">
                                    <img src="/Content/images/logo.png" alt="" />
                                </div>
                            </header>
                            <div id="login-box-inner">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <form action='https://sandbox.2checkout.com/checkout/purchase' method='post'>
                                            <input type='hidden' name='sid' value='901289655' />
                                            <input type='hidden' name='mode' value='2CO' />
                                            <input type='hidden' name='li_0_type' value='product' />
                                            <input type='hidden' name='li_0_name' value='invoice123' />
                                            <input type='hidden' name='li_0_price' value='25.99' />
                                            <input type="hidden" name="email" value="@Model.EmailAddress" />
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                                    <input type="text" class="form-control" name="card_holder_name" value="@Model.FullName" placeholder="Full Name" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                                    <input type="text" class="form-control" name="phone" placeholder="Enter phone number" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-strikethrough"></i></span>
                                                    <input type="text" name="street_address" class="form-control" placeholder="street address line 1" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-strikethrough"></i></span>
                                                    <input type="text" name="street_address2" class="form-control" placeholder="street address line 2">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-strikethrough"></i></span>
                                                    <input type="text" name="city" class="form-control" placeholder="city" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-strikethrough"></i></span>
                                                    <input type="text" name="state" class="form-control" placeholder="state" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-strikethrough"></i></span>
                                                    <input type="text" name="zip" class="form-control" placeholder="zip code" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-strikethrough"></i></span>
                                                    <input type="text" name="country" class="form-control" placeholder="country" value="@Model.Country" required>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <button name="submit" type="submit" class="btn btn-success col-xs-12">Checkout</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/js/demo.js"></script> <!-- only for demo -->
    <!-- this page specific scripts -->
    <script src="~/Scripts/js/moment.min.js"></script>
    <script src="~/Scripts/js/flot/jquery.flot.min.js"></script>
    <script src="~/Scripts/js/flot/jquery.flot.resize.min.js"></script>

    <script src="https://www.2checkout.com/static/checkout/javascript/direct.min.js"></script>
</body>
</html>
